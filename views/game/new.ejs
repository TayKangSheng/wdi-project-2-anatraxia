<%# FIRST PART: THE FORM %>
<form enctype="multipart/form-data" method="post" action="/game">
  <div class="row">
    <h2>Add A Game</h2>
    <div class="form-group">
      <label for="clubName">Game Name:</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Game Name">
      </div>
    <div class="form-group">
      <label for="type">Game Type:</label>
      <input type="text" class="form-control" name="type" id="type" placeholder="type">
    </div>
    <div class="form-group">
      <label for="publisher">Game Publisher:</label>
      <input type="text" class="form-control" name="publisher" id="publisher" placeholder="Publisher Name">
    </div>
    <div class="form-group">
      <label for="gameCover">Game Cover:</label>
      <input type="file" class="form-control" name="gameCover" id="gameCover" placeholder="Game Cover URL">
    </div>
    <div class="form-group ">
      <button type="submit" class="btn btn-default">Add a Game</button>
    </div>
  </div>
</form>
