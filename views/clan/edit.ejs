<div class="container">
  <h1 class="page-header">Edit Clan</h1>
  <form enctype="multipart/form-data" action=<%= "/clan/" + clanItem._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="Name">Name :</label>
      <input type="text" name="name" class="form-control" id="nameInput" value="<%= clanItem.name %>">
    </div>
    <div class="form-group">
      <label for="Name">Clan Banner:</label>
      <input type="file" class="form-control" name="clanBanner" id="clanBanner" placeholder="URL for Clan Banner">
    </div>
    <div class="form-group">
      <label for="gamePlayed">Game Played:</label>
      <% games.forEach(game => {%>
        <div class="radio">
        <label>
        <input type="radio" name="gamePlayed" value="<%= game.id%>">
        <%=game.name%>
        </label>
        </div>
        <%})%>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
