<div class="container">
  <h1 class="page-header">Edit Tournament</h1>
  <form action=<%= "/tournament/" + tournamentItem._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="Name">Name :</label>
      <input type="text" name="name" class="form-control" id="nameInput" value="<%= tournamentItem.name %>">
    </div>
    <div class="form-group">
      <label for="Name">Tournament Venue:</label>
      <input type="text" name="venue" class="form-control" id="venue" value="<%= tournamentItem.venue %>">
    </div>
    <div class="form-group">
      <label for="Name">Tournament Time:</label>
      <input type="text" name="time" class="form-control" id="time" value="<%= tournamentItem.time %>">
    </div>
    <div class="form-group">
      <label for="Name">Tournament Start Date:</label>
      <input type="date" name="tournamentDate" class="form-control" id="tournamentDate" value="<%= tournamentItem.tournamentDate %>">
    </div>
    <div class="form-group">
      <label for="endDate">Tournament Prize Money: $</label>
      <input type="text" name="prizeMoney" id="prizeMoney" value="<%= tournamentItem.prizeMoney %>">
    </div>
    <div class="form-group">
      <label for="endDate">Max no. of Player allowed:</label>
      <input type="text" name="maxPlayers" id="maxPlayers" value="<%= tournamentItem.maxPlayers %>">
    </div>
    <div class="form-group">
      <label for="game">Selected Game:</label>
      <% games.forEach(game => {%>
        <div class="radio">
        <label>
        <input type="radio" name="game" value="<%= game.id%>">
        <%=game.name%>
        </label>
        </div>
        <%})%>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
