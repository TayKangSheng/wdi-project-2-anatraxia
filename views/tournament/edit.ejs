<div class="container">
  <h1 class="page-header">Edit League</h1>
  <form action=<%= "/league/" + leagueItem._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="Name">Name :</label>
      <input type="text" name="name" class="form-control" id="nameInput" value="<%= leagueItem.name %>">
    </div>
    <div class="form-group">
      <label for="Name">League Venue:</label>
      <input type="text" name="venue" class="form-control" id="venue" value="<%= leagueItem.venue %>">
    </div>
    <div class="form-group">
      <label for="Name">League Time:</label>
      <input type="text" name="time" class="form-control" id="time" value="<%= leagueItem.time %>">
    </div>
    <div class="form-group">
      <label for="Name">League Start Date:</label>
      <input type="date" name="startDate" class="form-control" id="startDate" value="<%= leagueItem.startDate %>">
    </div>
    <div class="form-group">
      <label for="Name">League End Date:</label>
      <input type="date" name="endDate" class="form-control" id="endDate" value="<%= leagueItem.endDate %>">
    </div>
    <div class="form-group">
      <label for="endDate">League Prize Money: $</label>
      <input type="text" name="prizeMoney" id="prizeMoney" value="<%= leagueItem.prizeMoney %>">
    </div>
    <div class="form-group">
      <label for="endDate">Max no. of Club allowed: $</label>
      <input type="text" name="maxClub" id="maxClub" value="<%= leagueItem.maxClub %>">
    </div>
    <div class="form-group">
      <label for="Name">Organizer's Name:</label>
      <input type="text" name="organizer" class="form-control" id="organizer" value="<%= leagueItem.organizer %>">
    </div>
    <div class="form-group">
      <label for="Name">Organizer's Email:</label>
      <input type="email" name="organizerEmail" class="form-control" id="organizerEmail" value="<%= leagueItem.organizerEmail %>">
    </div>
    <div class="form-group">
      <label for="Name">Organizer's Contact:</label>
      <input type="text" name="organizerContact" class="form-control" id="organizerContact" value="<%= leagueItem.organizerContact %>">
    </div>
    <div class="form-group">
      <label for="game">Selected Game:</label>
      <% games.forEach(game => {%>
        <div class="radio">
        <label>
        <input type="radio" name="game[<%= game.id%>]">
        <%=game.name%>
        </label>
        </div>
        <%})%>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
