<div class="container">
  <h1 class="page-header">Edit Club</h1>
  <form action=<%= "/club/" + clubItem._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="Name">Name :</label>
      <input type="text" name="name" class="form-control" id="nameInput" value="<%= clubItem.name %>">
    </div>
    <div class="form-group">
      <label for="Name">Home Kit Color :</label>
      <input type="text" name="homeKitColor" class="form-control" id="homekitInput" value="<%= clubItem.homeKitColor %>">
    </div>
    <div class="form-group">
      <label for="Name">Away Kit Color :</label>
      <input type="text" name="awayKitColor" class="form-control" id="awayitInput" value="<%= clubItem.awayKitColor %>">
    </div>
    <div class="form-group">
      <label for="Name">Third Kit Color :</label>
      <input type="text" name="thirdKitColor" class="form-control" id="thirdkitInput" value="<%= clubItem.thirdKitColor %>">
    </div>
    <div class="form-group">
      <label for="Name">Team Badge:</label>
      <input type="text" name="teamBadge" class="form-control" id="teamBadgeInput" value="<%= clubItem.teamBadge %>">
    </div>
    <div class="form-group">
      <label for="Name">Manager's name:</label>
      <input type="text" name="managerName" class="form-control" id="managerName" value="<%= clubItem.manager.name %>">
    </div>
    <div class="form-group">
      <label for="Name">Manager's email:</label>
      <input type="text" name="managerEmail" class="form-control" id="managerEmail" value="<%= clubItem.manager.email %>">
    </div>
    <div class="form-group">
      <label for="Name">Manager's mobile:</label>
      <input type="text" name="managerMobile" class="form-control" id="managerMobile" value="<%= clubItem.manager.mobile %>">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
